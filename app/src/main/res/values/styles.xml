<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Style for overall parent view  -->
    <style name="overallParentView" parent="AppTheme">
        <item name="android:padding">@dimen/topPadding</item>
    </style>
    <!-- Style for GAD-7 title -->
    <style name="gad7Title" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/backgroundLighter</item>
        <item name="android:padding">@dimen/standardPadding</item>
    </style>
    <!-- Style for GAD-7 scrollView -->
    <style name="gad7ScrollView" parent="AppTheme">
        <item name="android:layout_marginBottom">@dimen/gad7ScrollViewMarginBottom</item>
    </style>
    <!-- Style for GAD-7 linear layout within GAD-7 scrollView -->
    <style name="gad7LinearLayout" parent="AppTheme">
        <item name="android:padding">@dimen/gad7LinearLayoutPadding</item>
        <item name="android:background">@color/backgroundLighter</item>
    </style>
    <!-- Style for GAD-7 time frame statement (over past 2 weeks) -->
    <style name="gad7TimeFrame" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/backgroundLighter</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:paddingTop">@dimen/standardPadding</item>
        <item name="android:paddingLeft">@dimen/standardPadding</item>
        <item name="android:paddingRight">@dimen/standardPadding</item>
    </style>
    <!--Style for GAD-7 questions -->
    <style name="gad7Questions" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/largerTextSize</item>
    </style>
    <!--Style for GAD-7 responses (radioButtons) and personal wellness checklist items -->
    <style name="allAnswers" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
    </style>
    <!-- Style for personal wellness checklist title -->
    <style name="personalWellnessTitle" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/backgroundDarker</item>
        <item name="android:padding">@dimen/standardPadding</item>
    </style>
    <!-- Style for personal wellness checklist scrollView -->
    <style name="personalWellnessScrollView" parent="AppTheme">
        <item name="android:paddingTop">@dimen/personalWellnessScrollViewPadding</item>
        <item name="android:paddingLeft">@dimen/personalWellnessScrollViewPadding</item>
        <item name="android:paddingRight">@dimen/personalWellnessScrollViewPadding</item>
        <item name="android:layout_marginBottom">@dimen/personalWellnessScrollViewMarginBottom
        </item>
        <item name="android:background">@color/backgroundDarker</item>
    </style>
    <!-- Style for self-care write-in question editText-->
    <style name="writeIn" parent="AppTheme">
        <item name="android:background">@color/backgroundLighter</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:padding">@dimen/standardPadding</item>
        <item name="android:layout_marginBottom">@dimen/writeInBoxMarginBottom</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <!-- Style for RESET button-->
    <style name="resetButton" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <!-- Set margin between SUBMIT and RESET button here-->
        <item name="android:layout_marginLeft">@dimen/bottomButtonMargin</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
    <!-- Style for SUBMIT button-->
    <style name="submitButton" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:background">@color/colorAccent</item>
    </style>
    <!--
    START
    OF
    LANDSCAPE
    MODE
    RESOURCES-->
    <!-- Style for linear layout containing GAD-7 timeframe, questions, and answers in LANDSCAPE mode-->
    <style name="gad7LinearLayoutParentLandscape" parent="AppTheme">
        <item name="android:layout_marginRight">@dimen/landscapeGad7LinearLayoutMarginRight</item>
    </style>

    <style name="writeInLandscape" parent="AppTheme">
        <item name="android:background">@color/backgroundLighter</item>
        <item name="android:textSize">@dimen/smallTextSize</item>
        <item name="android:padding">@dimen/standardPadding</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
</resources>
